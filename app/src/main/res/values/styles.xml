<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Thème principal de l’application MyAsap -->
    <style name="Theme.MyAsapNewversion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Couleur primaire (Bleu MyAsap #297988) -->
        <item name="colorPrimary">@color/myasap_blue</item>
        <item name="colorPrimaryVariant">@color/myasap_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Couleur d’arrière-plan générale -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Couleur de la barre de statut et de navigation -->
        <item name="android:statusBarColor">@color/myasap_blue</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Style par défaut pour les composants Material -->
    <style name="AppTheme" parent="Theme.MyAsapNewversion"/>

</resources>