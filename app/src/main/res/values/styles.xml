<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Thème principal sans ActionBar (pour utiliser un Toolbar custom) -->
    <style name="Theme.MyAsapNewversion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Désactive l’ActionBar native -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Couleur primaire (Bleu MyAsap #297988) -->
        <item name="colorPrimary">@color/myasap_blue</item>
        <item name="colorPrimaryVariant">@color/myasap_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Couleur d’arrière-plan générale -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Couleur barre de statut et navigation -->
        <item name="android:statusBarColor">@color/myasap_blue</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Alias pour compatibilité -->
    <style name="AppTheme" parent="Theme.MyAsapNewversion"/>

</resources>