<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom de l'appareil"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_connected"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/iv_connected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_connected"
        android:contentDescription="Connecté"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tv_device_name"
        app:layout_constraintEnd_toStartOf="@id/iv_auto_connect"
        android:layout_marginEnd="4dp"/>

    <ImageView
        android:id="@+id/iv_auto_connect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_auto_connect"
        android:contentDescription="Auto-connecté"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tv_device_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_device_mac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AA:BB:CC:DD:EE:FF"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_device_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_device_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-55 dBm"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_device_mac"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_device_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batterie : ?%"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_device_mac"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>