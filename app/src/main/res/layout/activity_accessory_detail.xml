<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'appareil"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batterie : 100%"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_rename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Renommer l'appareil"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_notif_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification en cas de batterie faible"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_battery_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pourcentage pour la notification"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oublier l'appareil"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_ring_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faire sonner l'appareil"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</ScrollView>